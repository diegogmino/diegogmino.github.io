---
import WebUnderConstructionLayout from '../layouts/WebUnderConstructionLayout.astro';
---

<WebUnderConstructionLayout title="Web under construction">
	<div class="main-text">
		<h1>Diego García Miño's portfolio is</h1>
		<h2>Under construction</h2>
	</div>
</WebUnderConstructionLayout>

<style>
	
	h1 {
	font-size: 1.5rem;
		font-weight: 800;
	}


	h2 {
		font-size: 3rem;
		font-weight: 800;
	}
	

.background-image {
	width: 100%;
}

.container {
	display: flex;
	width: 100%;
}

.main-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: white;
}

</style>
